<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>OPSINSIGHT</name>
            <displayName>OpsInsight</displayName>
            <comment>Centralized log management service</comment>
            <version>1.0</version>
            <components>
                <component>
                    <name>ELASTIC_SEARCH</name>
                    <displayName>ElasticSearch</displayName>
                    <category>MASTER</category>
                    <commandScript>
                        <script>scripts/master/elasticsearch_master.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>6000</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>KIBANA</name>
                    <displayName>Kibana</displayName>
                    <category>MASTER</category>
                    <commandScript>
                        <script>scripts/master/kibana_master.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>6000</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>FILEBEAT</name>
                    <displayName>FileBeat</displayName>
                    <category>SLAVE</category>
                    <cardinality>1+</cardinality>
                    <commandScript>
                        <script>scripts/slave/filebeat_slave.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>6000</timeout>
                    </commandScript>
                </component>
            </components>
            <configuration-dependencies>
                <config-type>elasticsearch-env</config-type>
                <config-type>elasticsearch</config-type>
                <config-type>kibana-env</config-type>
                <config-type>kibana</config-type>
                <config-type>filebeat-env</config-type>
                <config-type>filebeat</config-type>
                <config-type>repo-env</config-type>
            </configuration-dependencies>
            <restartRequiredAfterChange>true</restartRequiredAfterChange>
        </service>
    </services>
</metainfo>
